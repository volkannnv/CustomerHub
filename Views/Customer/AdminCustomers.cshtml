@model List<CustomerHub.Models.AdminCustomer>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Admin Customers</title>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            background-color: #eee;
            font-family: Arial, sans-serif;
        }
        .page-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }
        h3 {
            margin-bottom: 10px;
        }
        .table-container {
            width: 60%;
            min-width: 300px;
            margin-bottom: 10px;
            text-align: center;
        }
        .scrollable {
            max-height: 400px;
            border: 1px solid #000;
            overflow-y: auto;
            background-color: #fff;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            text-align: center;
        }
        th, td {
            border: 1px solid #000;
            padding: 8px;
        }
        .btn {
            padding: 6px 12px;
            margin: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="page-container">
        <h3>Admin Customers</h3>
        <div>
            <button class="btn" onclick="location.href='/Customer/Index'">Back to Customer Index</button>
        </div>
        <div class="table-container">
            <div class="scrollable">
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>First Address</th>
                            <th>First Phone</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var cust in Model)
                            {
                                <tr>
                                    <td>@cust.CustomerName</td>
                                    <td>@cust.FirstAddress</td>
                                    <td>@cust.FirstPhone</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="3">No customers found.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
