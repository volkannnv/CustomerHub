@model CustomerHub.Models.User
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>User Settings</title>
    <style>
        /* Basic styling */
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
            background-color: #eee;
        }

        .page-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .settings-box {
            background: #fff;
            padding: 20px 30px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

            .settings-box label {
                display: inline-block;
                width: 100px;
            }

            .settings-box button {
                margin-top: 10px;
                padding: 8px 12px;
                cursor: pointer;
            }

            .settings-box h2 {
                margin-top: 0;
            }

        .buttons-row {
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="page-container">
        <div class="settings-box">
            <h2>User Settings</h2>
            <form method="post" action="/User/Update">
                <label>Username:</label>
                <input type="text" name="newUsername" value="@Model.Username" />
                <br /><br />

                <label>New Password:</label>
                <input type="password" name="newPassword" value="@Model.PasswordHash" />
                <br /><br />

                <div class="buttons-row">
                    <button type="submit">Save Changes</button>
                    <button type="button" onclick="location.href='/Customer/Index'">Back to Customers</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
