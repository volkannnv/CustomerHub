@{
    ViewBag.Title = "Login";
    Layout = null;  // If you don't have a shared layout, remove this or set to null
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <style>
        /* Basic reset for the page */
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
        }
        /* Flex container to center content */
        .page-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100%;
            background-color: #f2f2f2; /* optional */
        }
        /* A simple box for the form */
        .login-box {
            background: #fff;
            padding: 20px 30px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
            /* Spacing for form elements */
            .login-box label {
                display: inline-block;
                width: 80px;
            }

            .login-box button {
                margin-top: 10px;
                padding: 8px 12px;
                cursor: pointer;
            }
        /* Link styling */
        a {
            color: blue;
            text-decoration: underline;
            margin-top: 10px;
            display: inline-block;
        }
        /* Error message */
        .error {
            color: red;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="page-container">
        <div class="login-box">
            <h2>Login</h2>

            @if (ViewBag.Error != null)
            {
                <div class="error">@ViewBag.Error</div>
            }

            <form method="post" action="/Account/Login">
                <label>Username:</label>
                <input type="text" name="username" />
                <br /><br />

                <label>Password:</label>
                <input type="password" name="password" />
                <br /><br />

                <button type="submit">Login</button>
            </form>

            <a href="/Account/CreateAccount">Don't have an account? Create one!</a>
        </div>
    </div>
</body>
</html>
